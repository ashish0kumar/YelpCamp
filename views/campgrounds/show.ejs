<% layout("layouts/boilerplate") %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-5 rounded shadow">
            <img src="<%= campground.image %>" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title fw-semibold"><%= campground.title %></h5>
                <hr>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><i class="fa-solid fa-location-dot"></i> <%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price %>/night</li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-primary me-2"><i class="fa-solid fa-pen"></i> Edit</a>
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="card-link btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</button>
                </form>
            </div>
            <div class="card-footer pb-3 d-flex">
                <a class="text-decoration-none" href="/campgrounds"><i class="fa-solid fa-arrow-left"></i> All Campgrounds</a>
            </div>
        </div>

        <h2>Leave a Review</h2>
        <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="my-3 validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range bg-light p-3 rounded" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please write a review before submitting</div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>

    </div>
</div>